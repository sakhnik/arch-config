#!/bin/bash -e

# Recollect system information

[[ -d aconfmgr ]] || git clone https://github.com/CyberShadow/aconfmgr

export PACMAN=/usr/bin/pacman

this_dir=$(readlink -f `dirname ${BASH_SOURCE[0]}`)

# Clean autogenerated files from the previous run
cd $this_dir
rm -rf 99-unsorted.sh
git clean -fdx files

# Collect and save current configuration
cd aconfmgr
LANG=C ./aconfmgr -c $this_dir save
